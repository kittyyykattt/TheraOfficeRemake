<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.TheraOffice.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:Maui.TheraOffice.Views">

    <TabBar>
        <ShellContent
            Title="Patients"
            ContentTemplate="{DataTemplate view:PatientsPage}"
            Route="patients" />

        <ShellContent
            Title="Physicians"
            ContentTemplate="{DataTemplate view:PhysiciansPage}"
            Route="physicians" />

        <ShellContent
            Title="Appointments"
            ContentTemplate="{DataTemplate view:AppointmentsPage}"
            Route="appointments" />
    </TabBar>
</Shell>
